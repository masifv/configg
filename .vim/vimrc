" warnign and error signs
let g:ale_sign_error = '->'
let g:ale_sign_warning = '--'
" select used linters
let g:ale_linters = {'python': ['flake8']}
" select used fixers
let g:ale_fixers = {'python': ['autopep8', 'isort', 'yapf', 'remove_trailing_lines', 'trim_whitespace']}

