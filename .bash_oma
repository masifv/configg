function cd() {
    new_directory="$*";
    if [ $# -eq 0 ]; then 
        new_directory=${HOME};
    fi;
    builtin cd "${new_directory}" && ls
}


_lll() {
    if [[ $# -eq 0 ]]; then
        find $(pwd) -maxdepth 1 -printf "%h/%f\n"
    else
        find $1 -maxdepth 1 -printf "%h/%f\n"
    fi
}

